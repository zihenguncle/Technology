<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--隐藏状态栏-->
    <style name="NoTitle" parent="Theme.AppCompat.DayNight.NoActionBar"> <!--自定义主题名称-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="text_image_logo">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_marginTop">154dp</item>
    </style>

    <style name="Title_Chain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">维度科技</item>
        <item name="android:layout_marginTop">236dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="title_English">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">WEIDU KEJI</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="title_create_place">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">八维移动通信学院作品</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="model_user_activity_login_phone">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>
    <style name="model_user_activity_login_phone_editText">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">手机号</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">#eeeeee</item>
        <item name="android:layout_marginTop">152dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="model_user_activity_login_line">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="model_user_activity_login_pwd">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    <style name="model_user_activity_login_pwd_editText">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:hint">登录密码</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textColorHint">#eeeeee</item>
        <item name="android:background">@null</item>
    </style>

    <style name="model_user_activity_login_hide_show">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:layout_marginTop">33dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>
    <style name="model_user_activity_login_textView_register">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">快速注册</item>
    </style>
    <style name="model_user_activity_login_button">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">登录</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">130dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>


</resources>